<% @likes.each do |like| %>
<% picture = Picture.find_by(id: like.picture_id) %>

<figure class="image is-4by5"> <%# 絵の画像 %>
    <%= link_to picture_path(picture) do %>
    <%= attachment_image_tag picture, :image %>
    <% end %>
</figure>


<div class="content">
    <p class="title is-4"><%= picture.title %></p><%# 絵タイトル %>
</div>
<div class="media">
    <div class="media-left">
        <figure class="image is-32x32"> <%# アイコン %>
            <%= attachment_image_tag picture.user, :profile_image, fallback: "no-image.png", class: "profile_image" %>
        </figure>
    </div>
    <div class="media-content"> <%# ユーザー名%>
        <p class="title is-6"><%=link_to picture.user.username, user_path(picture.user) %></p>
    </div>
</div>
</div>
</div>

<% end %>
</div>
