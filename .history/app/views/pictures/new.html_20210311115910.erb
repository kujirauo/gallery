<% if @picture.errors.any? %>
<div class="notification is-danger">
    <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
        <% @picture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<section class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-6">
                <%= form_for @picture do |f| %>
                <div class="field">
                    <%= f.label :title, "title", class: "label" %>
                    <%= f.text_field :title, class: "input" %>
                </div>

                <div class="field">
                    <%= f.label :body, "詳細", class: "label" %>
                    <%= f.text_area :body, class: "textarea" %>
                </div>

                <div class="field">
                    <%= f.label :image, "画像", class: "label" %>
                    <%= f.attachment_field :image, class: "input" %>
                </div>

                <div class="field">
                    <%=f.label :tag_list %>
                    <%=f.text_field :tag_list, class: 'form-control', value: @picture.tag_list.join(','),%>
                </div>

                <%= f.submit '投稿', class: "button is-info" %>
                <% end %>
            </div>
        </div>
    </div>
</section>